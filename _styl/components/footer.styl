/*--------------------------------------------------------------------
* $FOOTER
--------------------------------------------------------------------*/

footer
  background-color: var(--mauve3);
  border-top: $border
  text-align: center;
  padding: 24px 32px
  min-height: 100px;

  .wrapper
    display: flex;
    justify-content: space-between;
    align-items: center;
    max-width: 1664px;
    margin: 0 auto;

    .copy
      flex-basis: 45%
      text-align: left

    .social
      flex-basis: 45%
      text-align: right

    @media screen and (max-width: 768px)
      flex-direction: column
      justify-content: flex-start

      .copy
        flex-basis: 100%
        margin-bottom: 16px
        
      .social
        flex-basis: 100%
        margin-bottom: 16px

  p
    margin-bottom: 0
  
  i
    color: var(--crimson10)

  .social
    a
      font-size: $3xl
      transition: 0.2s ease all
      &:hover
        opacity: .8

@media screen and (max-width: 320px) {
  .wrapper {
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
  }
}


    