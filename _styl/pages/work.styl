/*--------------------------------------------------------------------
* $WORK
--------------------------------------------------------------------*/
.work

  section
    padding: 0;
    margin-top: 64px;


  h1.title
    font-size: 36px;
    text-align: left;
    padding-bottom: 0;
    margin-bottom: 0;

  h2
    font-size: 30px;

  a
    color:var(--crimson12)

  .button
    margin-top: 16px;
    

  .work-col
    width: 49%;
    border: $border
    border-radius: $round;
    
  .logo-wrap
    background-color: var(--mauve1)
    margin: 0 auto;
    height: 165px;
    max-width: 100%;
    text-align: center;
    border-radius: $round;
    
    img
      position: relative;
      top: 40%;
      max-width: 60%;
      
  .work-info
    border-top: $border;
    padding: 30px;

    p
      font-size: 16px;
      
    p.small
      font-size: 14px;
      padding-bottom: 5px;
      margin-bottom: 0;
        
    .button-wrap
      margin: 20px 10px 0 0;
  
  .work-grid
    display: flex;
    flex-wrap: wrap
    justify-content: space-between;
      
    @media only screen and (max-width: 800px)
      display: block;
      justify-content: none;
    
    .work-col
      background-color: var(--mauve1)
      width: 32%;
      margin-bottom: 40px;
      
      @media only screen and (max-width: 800px)
        width: 100%;
        margin-bottom: 40px;
      
      a
        display: inline-block;
        &:hover
          opacity: .8

      img
        width: 200px;

    .work-logo-col
      width: 32%;
      text-align: center;
      padding: 20px;

      a
        background: none;
      
      img
        width: 65%;
        &:hover
            opacity: .8;
      
      @media only screen and (max-width: 800px)
        width: 100%;

        img
          width: 60%;
          
  .case-studies      

    .work-col
      width: 49%;

      @media only screen and (max-width: 800px)
        width: 100%;
      
      .logo-wrap
        height: auto;
        
        @media only screen and (max-width: 800px)
          height: auto;
          min-height: 100px;
              
        img
          width: auto;
          max-width: 100%
          display: block;

          
      .work-info
        text-align: left;
    
        
/*--------------------------------------------------------------------
* $CASE STUDIES
--------------------------------------------------------------------*/

.case-study


  .full
    width: 100%;
  
  .content
    max-width: 1100px;
    
  .logo
    max-width: 600px;
    
  .rainbow
    margin: 10px 0;
    
  blockquote
    margin-bottom: 70px;
    margin-left: 30px;
    padding-left: 30px;
    padding-right: 50px;
    border-left: 10px solid $blue;
    
    @media only screen and (max-width: 600px) {
      margin-left: 20px;
      padding-left: 20px;
      padding-right: 0;
    }
    
    cite
      display: block;
      text-align: right;
      font-size: 20px;
  
  img {
    border-radius: 1rem;
  }

  .btn-left {
    float: left;
    
    @media only screen and (max-width: 600px) {
      float: none;
      text-align: center;
      margin-top: 40px;
    }

  }
  
  .btn-right {
    float: right;
    
    @media only screen and (max-width: 600px) {
      float: none;
      text-align: center;
    }
  }
    
  #intro
    img
      margin-bottom: 40px;
          
    h1
      text-align: center;
      font-size: 32px;
      
  #main
    max-width: 1000px;
    margin: 0 auto;
    
    p
      margin: 60px 0;
      line-height: 1.75em;
      
      &:last-of-type
        margin: 40px 0;

      
  .cs-grid
    display: flex;
    
  .cs-col
    flex: 1;
    
  .cs-grid-2
    margin: 40px 0;
    display: flex;
    justify-content: space-between;
    
    @media only screen and (max-width: 600px) {
      display: block;
      margin: 0 auto;
    }
    
  .cs-grid-3
    margin: 40px 0;
    display: flex;
    justify-content: space-between;
    
    @media only screen and (max-width: 600px) {
      display: block;
    }
    
  .cs-col-2
    width: 48%;
    
    @media only screen and (max-width: 600px) {
      width: 100%;
      margin-bottom: 20px;
    }
    
  .cs-col-3
    width: 32%;
    
    @media only screen and (max-width: 600px) {
      width: 100%;
      margin-bottom: 20px;
    }