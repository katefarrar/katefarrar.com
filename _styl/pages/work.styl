/*--------------------------------------------------------------------
* $WORK
--------------------------------------------------------------------*/
.work

  .content
    display: flex;
    align-items: center;
    width: 100%;

    section
      width: 100%;

  .inline
    padding-top: 10px;
    padding-right: 2px;
    padding-left: 2px;

  h1.title
    text-align: left;
    font-size: $3xl

    i
      margin-right: 8px;
      position: relative;
      top: 2px;

  

  .experience
    margin-top: 48px;

    h2
      margin-bottom: 1rem;

    i
      margin-right: 8px;
      position: relative;
      top: 2px;

    .name
      font-weight: $medium;
      font-size: $xl
      margin-right: 4px;

  .work-row.no-hover:hover
        color: var(--mauve12)
        opacity: .8

  .work-row.first
    border-top: 1px solid var(--mauve4)


  .work-row
    display: flex
    color: inherit;
    justify-content: space-between
    border-bottom: 1px solid var(--mauve4)
    padding: 16px;
    align-items: baseline
    flex-wrap: wrap
    @media (max-width: 768px)
      flex-direction: column;
    &:hover
      color: var(--crimson10)

    .col-one
      display: flex;
      align-items: baseline
      font-size: $1xl
      @media (max-width: 768px)
        flex-direction: column;
      i
        padding-right: px;
        top: 2px
        font-size: $2xl
        position: relative;
      span
        font-size: $md;
        color: var(--mauve11)

  .callout
      margin-top: 48px;
      background-color: var(--mauve2)
      border: $border
      border-radius: $round;
      padding: 24px;
      display: flex;
      gap: 16px;
      align-items: center;
      width: 100%;
      @media only screen and (max-width: 800px)
        align-items: flex-start;



      h3
        margin-top: 0;
        margin-bottom: 0;
        font-size: $2xl;
          
      i
        font-size: $5xl;
        margin-right: 12px

      a:hover
        border-bottom: 1px solid var(--crimson10)
      

@media (max-width: 768px) 
  .intro, .inner
    max-width: 100%;

  .inner ul
    display: block;

p
  a
    margin-right: 2px
    &:hover
      border-bottom: 1px solid var(--crimson10)


  .button
    margin-top: 16px;

  .email-link
    margin-top: 16px;
    margin-bottom: 0;
    

  .work-col
    width: 49%;
    border: $border
    border-radius: $round;
    
  .logo-wrap
    background-color: var(--mauve1)
    margin: 0 auto;
    height: 165px;
    max-width: 100%;
    text-align: center;
    border-radius: $round;
    
    img
      position: relative;
      top: 40%;
      max-width: 60%;

  
      
  .work-info
    border-top: $border;
    padding: 32px;

    p
      font-size: 16px;
      
    p.small
      font-size: 14px;
      padding-bottom: 5px;
      margin-bottom: 0;
        
    .button-wrap
      margin: 20px 10px 0 0;

      a.private
        color: var(--crimson10)
  
  .work-grid
    display: flex;
    flex-wrap: wrap
    justify-content: space-between;
      
    @media only screen and (max-width: 800px)
      display: block;
      justify-content: none;
    
    .work-col
      background-color: var(--mauve2)
      width: 49%;
      margin-bottom: 40px;
      
      @media only screen and (max-width: 800px)
        width: 100%;
        margin-bottom: 40px;
      
      a
        display: inline-block;
        &:hover
          opacity: .8

      img
        width: 200px;

    .work-logo-col
      width: 32%;
      text-align: center;
      padding: 20px;

      a
        background: none;
      
      img
        width: 65%;
        &:hover
            opacity: .8;
      
      @media only screen and (max-width: 800px)
        width: 100%;

        img
          width: 60%;
          
  .case-studies
    h3
      margin-top: 1.2rem;

    .work-col

      @media only screen and (max-width: 800px)
        width: 100%;
      
      .logo-wrap
        height: auto;
        
        @media only screen and (max-width: 800px)
          height: auto;
          min-height: 100px;
              
        img
          width: auto;
          max-width: 100%
          display: block;

          
      .work-info
        text-align: left;

  .work-links
    margin-bottom: 64px;

    .links
      display: inline-flex
      flex-wrap: wrap
      gap: 16px;

      .link-item
        flex 1 0 calc(50% - 20px)
        margin 8px 0;
        padding 24px 32px
        box-sizing border-box
        background-color: var(--mauve2)
        border-radius: $round;
        border: $border
        gap: 8px;
        
        @media (max-width: 768px)
          flex-basis calc(100% - 20px)

        h3
          margin-top: 0;
          margin-bottom: 1.2rem;
          font-size: $2xl;

          span 
            display: inline-block;

            i
              display: inline-block
              padding-bottom: 3px
              padding-right: 8px;
              vertical-align: middle;

.tags
  span 
    font-size: $xs
    background-color: var(--teal3)
    border-radius: $round
    border: 1px solid var(--teal11)
    padding: 4px 8px
    color: var(--teal11)
    margin: 0 8px 8px 0
    display: inline-block;

      
    
        
/*--------------------------------------------------------------------
* $CASE STUDIES
--------------------------------------------------------------------*/

.case-study

  .wrap
    display: flex
    flex-wrap: wrap
    justify-content: space-between
    align-items: center
    width: 100%
    @media screen and (max-width: 500px)
      flex-direction: column
      justify-content: flex-start

    .back
      flex-basis: 45%
      text-align: left;
      @media screen and (max-width: 500px)
        flex-basis: 100%
        order: 2
    
    .link
      flex-basis: 45%
      text-align: right
      @media screen and (max-width: 500px)
        order: 1
        margin: 16px 0 24px
        flex-basis: 100%
        text-align: left


  .full
    width: 100%;
      
  .logo
    max-width: 600px;
    
  blockquote
    margin-bottom: 70px;
    margin-left: 32px;
    padding-left: 32px;
    padding-right: 48px;
    border-left: 10px solid $blue;
    
    @media only screen and (max-width: 600px) {
      margin-left: 0;
      padding-left: 16px;
      padding-right: 0;
    }
    
    cite
      display: block;
      text-align: right;
      font-size: 20px;
      @media only screen and (max-width: 600px)
        text-align: left
        margin-top: 8px
  
  img {
    border-radius: $round;
    width: 100%;

  }
    
  #intro
    h1
      margin-bottom: 1rem;

    img
      margin-bottom: 36px;

  #main
    margin: 0 auto 64px;

    .tags
      margin-top: 24px;
      span 
        font-size: $xl
    
    p
      margin: 60px 0;
      line-height: 1.75em;
      
      &:last-of-type
        margin: 40px 0;

      
  .cs-grid
    display: flex;
    
  .cs-col
    flex: 1;
    
  .cs-grid-2
    margin: 40px 0;
    display: flex;
    justify-content: space-between;
    
    @media only screen and (max-width: 600px) {
      display: block;
      margin: 0 auto;
    }
    
  .cs-grid-3
    margin: 40px 0;
    display: flex;
    justify-content: space-between;
    
    @media only screen and (max-width: 600px) {
      display: block;
    }
    
  .cs-col-2
    width: 48%;
    
    @media only screen and (max-width: 600px) {
      width: 100%;
      margin-bottom: 20px;
    }
    
  .cs-col-3
    width: 32%;
    
    @media only screen and (max-width: 600px) {
      width: 100%;
      margin-bottom: 20px;
    }