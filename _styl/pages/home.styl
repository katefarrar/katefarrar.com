/*--------------------------------------------------------------------
* $HOME
--------------------------------------------------------------------*/

.content
    flex: 1
    margin: 0 auto

.home

  .content
    display: flex
    align-items: center
    
    @media screen and (max-width: 500px)
      margin-top: 64px
      margin-bottom: 64px

  #intro
    padding-top: 0;
    padding-bottom: 0;
    
    h1
      font-size: $4xl
      margin-bottom: 40px;
    
    h2
      margin-bottom: 40px;

    .icons
      display: flex;
      flex-wrap: wrap;
      margin-bottom: 40px;
      
      .icon
        color: var(--teal10)
        :not(:last-child)
          margin-right: 16px;
        i
          font-size: $8xl
          
          @media screen and (max-width: 768px)
            font-size: $6xl
          
          @media screen and (max-width: 499px)
            font-size: $5xl
          
          @media screen and (max-width: 400px)
            font-size: $4xl
  
  .button
    margin-top: 24px;
